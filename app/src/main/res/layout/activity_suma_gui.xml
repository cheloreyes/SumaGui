<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SumaGuiActivity"
    android:background="@drawable/tablerohorizontal"
    android:orientation="vertical"
    android:gravity="center_horizontal|fill_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola mi Campeon !!"
        android:id="@+id/refuerzo"
        android:textSize="32dp"
        android:textColor="#ffedc369"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|fill_vertical"
        android:layout_gravity="top">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sumaLayout"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="30dp"
                android:layout_alignParentTop="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/first_num"
                    android:textSize="30dp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_margin="5dp"
                    android:paddingBottom="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:id="@+id/signo"
                        android:textSize="30dp"
                        android:textColor="#ffffffff"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/second_num"
                        android:textSize="30dp"
                        android:textColor="#ffffffff"
                        android:gravity="right"
                        android:paddingBottom="20dp"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/linea"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/respuesta"
                    android:textSize="30dp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:paddingBottom="20dp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagenLayout"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_alignParentTop="false">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/first_n_img"
                    android:focusable="false"
                    android:textSize="22dp"
                    android:text="++"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/second_n_img"
                    android:focusable="false"
                    android:textSize="22dp"
                    android:text="++"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/respuesta_img"
                    android:focusable="false"
                    android:inputType="none"
                    android:textSize="22dp"
                    android:text="++"
                    android:gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/num_layout"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal|right"
                    android:weightSum="1">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="7"
                        android:id="@+id/btn_siete"
                        android:textColor="#ff6695c2"
                        android:layout_margin="5dp"
                        android:background="@drawable/cuadrado"
                        android:layout_weight="0.20"
                        android:textSize="22dp"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="8"
                        android:id="@+id/btn_ocho"

                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:background="@drawable/cuadrado"
                        android:textSize="22dp"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="9"
                        android:id="@+id/btn_nueve"

                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:background="@drawable/cuadrado"
                        android:textSize="22dp"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_horizontal|right">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="4"
                        android:id="@+id/btn_cuatro"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:background="@drawable/cuadrado"
                        android:textSize="22dp"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="5"
                        android:id="@+id/btn_cinco"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:textSize="22dp"
                        android:background="@drawable/cuadrado"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="6"
                        android:id="@+id/btn_seis"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:textSize="22dp"
                        android:background="@drawable/cuadrado"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|right"
                    android:layout_marginLeft="10dp">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="1"
                        android:id="@+id/btn_uno"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:background="@drawable/cuadrado"
                        android:textSize="22dp"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="2"
                        android:id="@+id/btn_dos"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:textSize="22dp"
                        android:background="@drawable/cuadrado"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="3"
                        android:id="@+id/btn_tres"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:textSize="22dp"
                        android:background="@drawable/cuadrado"
                        android:typeface="sans" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:weightSum="1"
                    android:layout_marginLeft="10dp">

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="0"
                        android:id="@+id/btn_cero"
                        android:textColor="#FF6695C2"
                        android:layout_margin="5dp"
                        android:textSize="22dp"
                        android:background="@drawable/cuadrado"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="C"
                        android:id="@+id/btn_limpiar"
                        android:background="@drawable/cuadradoyellow"
                        android:layout_margin="5dp"
                        android:textSize="22dp"
                        android:textColor="#ffedc369"
                        android:typeface="sans" />

                    <Button
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:onClick="buttonClicked"
                        android:text="OK"
                        android:id="@+id/btn_enter"
                        android:background="@drawable/cuadradored"
                        android:layout_margin="5dp"
                        android:typeface="sans"
                        android:textSize="22dp"
                        android:textColor="#ffde7578" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
