<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SumaGuiActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola mi CampeÃ³n !!"
        android:id="@+id/refuerzo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/first_num"
        android:textSize="28dp"
        android:layout_below="@+id/refuerzo"
        android:layout_alignLeft="@+id/second_num"
        android:layout_alignStart="@+id/second_num"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/second_num"
        android:textSize="28dp"
        android:layout_alignTop="@+id/signo"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/signo"
        android:textSize="28dp"
        android:layout_below="@+id/first_num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_n_img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/first_num"
        android:focusable="false"
        android:layout_alignLeft="@+id/second_n_img"
        android:layout_alignStart="@+id/second_n_img"
        android:layout_alignTop="@+id/first_num"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second_n_img"
        android:layout_alignBottom="@+id/second_num"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/second_num"
        android:focusable="false"
        android:layout_alignLeft="@+id/respuesta_img"
        android:layout_alignStart="@+id/respuesta_img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-------------"
        android:id="@+id/textView5"
        android:textSize="28dp"
        android:singleLine="false"
        android:layout_below="@+id/second_num"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/respuesta"
        android:textSize="28dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/respuesta_img"
        android:gravity="right"
        android:layout_alignRight="@+id/second_num"
        android:layout_alignEnd="@+id/second_num" />

    <TextView
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:id="@+id/respuesta_img"
        android:focusable="false"
        android:inputType="none"
        android:layout_below="@+id/second_n_img"
        android:layout_marginTop="20dp"
        android:layout_alignBottom="@+id/respuesta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="7"
                    android:id="@+id/btn_siete"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="8"
                    android:id="@+id/btn_ocho"

                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="9"
                    android:id="@+id/btn_nueve"

                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="4"
                    android:id="@+id/btn_cuatro"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="5"
                    android:id="@+id/btn_cinco"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="6"
                    android:id="@+id/btn_seis"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="1"
                    android:id="@+id/btn_uno"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="2"
                    android:id="@+id/btn_dos"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="3"
                    android:id="@+id/btn_tres"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="buttonClicked"
                android:weightSum="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="0"
                    android:id="@+id/btn_cero"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="Clear"
                    android:id="@+id/btn_limpiar"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ff009aff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buttonClicked"
                    android:text="Enter"
                    android:id="@+id/btn_enter"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#ffff7e19" />

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
